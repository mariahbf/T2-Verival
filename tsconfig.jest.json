{
    "compilerOptions": {
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "esModuleInterop": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "react", 
      "incremental": true,
      "paths": {
        "@/*": ["./src/*"]
      }
    },
    "include": ["src", "jest.setup.ts", "jest.config.ts"],
    "exclude": ["node_modules"]
  }
  